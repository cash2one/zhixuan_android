<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhixuan.ui.MainActivity" >

    <include layout="@layout/top_main" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".MainActivity" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#9d9d9d" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/nav_ll_cm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="3dp" >

            <ImageView
                android:id="@+id/nav_iv_cm"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/custom_manager2" />

            <TextView
                android:id="@+id/nav_tv_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户经理"
                android:textColor="@color/main_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_ll_department"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="3dp" >

            <ImageView
                android:id="@+id/nav_iv_department"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/department1" />

            <TextView
                android:id="@+id/nav_tv_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业部"
                android:textColor="#82858b"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_ll_about"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="3dp" >

            <ImageView
                android:id="@+id/nav_iv_about"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/about1" />

            <TextView
                android:id="@+id/nav_tv_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于"
                android:textColor="#82858b"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>